{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmit": true,
    "strictNullChecks": false,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/client/*"
  ],
  "exclude": [
    "src/client/app/main-prod.ts",
    "src/client/**/*.spec.ts",
    "src/e2e/**/*.e2e-spec.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  /*"angularCompilerOptions": {
    "genDir": "./compiled",
    "skipMetadataEmit": true
  },*/
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
